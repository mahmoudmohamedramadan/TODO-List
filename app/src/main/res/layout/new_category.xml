<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/newCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/newTaskEditText"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@null"
        android:fontFamily="monospace"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Add New Category"
        android:textAlignment="center"
        android:textColor="@color/custom_dark_gray"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/newCategoryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/custom_dark_blue"
        android:fontFamily="monospace"
        android:hint="Type a category"
        android:maxLength="30"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textCursorDrawable="@null" />

    <Button
        android:id="@+id/saveCategoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newCategoryEditText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:fontFamily="monospace"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16dp" />
</RelativeLayout>